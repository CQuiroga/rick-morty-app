doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="/css/styles.css")
  body(class="bg-gray-100")
    div(class="container mx-auto p-4")
      h1(class="text-3xl font-bold text-center mb-8 text-green-800")= title
      
      div(class="grid grid-cols-1 md:grid-cols-2 gap-8")
        // Formulario de b√∫squeda
        div(class="bg-white p-6 rounded-lg shadow-md")
          h2(class="text-xl font-semibold mb-4") Buscar Personajes
          form(id="searchForm")
            div(class="mb-4")
              label(class="block text-gray-700 mb-2", for="name") Nombre
              input(class="w-full p-2 border rounded", type="text", name="name", id="name")
            
            div(class="mb-4")
              label(class="block text-gray-700 mb-2", for="status") Estado
              select(class="w-full p-2 border rounded", name="status", id="status")
                option(value="") Todos
                option(value="alive") Vivo
                option(value="dead") Muerto
                option(value="unknown") Desconocido
            
            button(class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700", type="submit") Buscar
        
        // Resultados
        div(class="bg-white p-6 rounded-lg shadow-md")
          h2(class="text-xl font-semibold mb-4") Resultados
          div(id="results", class="grid grid-cols-1 gap-4")

    script(src="/js/main.js")